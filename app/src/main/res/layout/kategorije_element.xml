<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/design_default_color_surface"
    android:layout_marginBottom="15dp"
    tools:context=".ui.categories.KategorijeFragment">

    <ImageView
        android:id="@+id/slika"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/naziv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Naziv kategorije"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/slika"
        app:layout_constraintLeft_toRightOf="@id/slika"
        app:layout_constraintEnd_toStartOf="@+id/otvoriKategoriju"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INKREMENTALNE   VREMENSKE   KOLIÄŒINSKE"
        android:textColor="@color/material_on_surface_disabled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slika"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/otvoriKategoriju"
        android:layout_width="15dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorAccent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>